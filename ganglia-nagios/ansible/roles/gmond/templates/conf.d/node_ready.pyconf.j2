# node_ready.pyconf
modules {
  module {
    name     = "node_ready"
    language = "python"

{% if cluster_type == 'erikube' %}    
    
    param kubelet_conf {
      value = /etc/kubernetes/kubelet.conf

    }
{% endif %}
  }
}

collection_group {      
  collect_every  = 5
  time_threshold = 5

  metric {
    name = "node_ready"
    title = "Kube Node Ready Status"
  }
 
}        